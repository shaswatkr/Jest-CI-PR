{
    "name": "angularjs-boilerplate",
    "version": "1.0.0",
    "license": "MIT",
    "description": "An AngularJS Boilerplate to start your project with Jest Unit Testing and Code Coverage and Gulp watch/build tasks",
    "main": "app/app.js",
    "jest": {
        "coveragePathIgnorePatterns": [
            "js/angular/angular-mocks.js",
            "js/angular/angular.min.js"
        ],
        "coverageDirectory": "<rootDir>/tests/coverage"
    },
    "devDependencies": {
        "angular-mocks": "^1.8.2",
        "browser-sync": "^1.9.1",
        "connect": "^3.3.1",
        "connect-livereload": "^0.5.0",
        "del": "^1.1.1",
        "gulp": "^3.8.10",
        "gulp-angular-templatecache": "^1.6.0",
        "gulp-autoprefixer": "^2.1.0",
        "gulp-changed": "^1.1.1",
        "gulp-concat": "^2.4.3",
        "gulp-filter": "^2.0.0",
        "gulp-html-replace": "^1.4.4",
        "gulp-imagemin": "^7.1.0",
        "gulp-load-plugins": "^0.10.0",
        "gulp-minify-css": "^1.2.4",
        "gulp-minify-html": "^0.1.8",
        "gulp-notify": "^2.1.0",
        "gulp-rename": "^1.2.0",
        "gulp-rev": "^3.0.1",
        "gulp-size": "^1.2.0",
        "gulp-sourcemaps": "^1.3.0",
        "gulp-uglify": "^1.1.0",
        "gulp-uncss": "^1.0.0",
        "gulp-usemin": "^0.3.11",
        "jest-cli": "^26.6.3",
        "opn": "^1.0.0",
        "run-sequence": "^1.0.2",
        "serve-index": "^1.5.0",
        "serve-static": "^1.7.1",
        "tiny-lr": "^0.1.4",
        "watch": "^0.13.0"
    },
    "scripts": {
        "test": "jest --ci",
        "start": "gulp",
        "build": "gulp build",
        "server": "gulp server",
        "serverbuild": "gulp server-build",
        "postinstall": "npm install gulp-sass gulp-imagemin --save"
    }
}